<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/llTabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_bg_gray"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tvFirstTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_frag_home_icon_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/com_text_blue_gray_selector" />

        <TextView
            android:id="@+id/tvSecondTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_frag_home_icon_selector"
            android:gravity="center"
            android:text="任务"
            android:textColor="@drawable/com_text_blue_gray_selector" />

        <TextView
            android:id="@+id/tvThirdTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_frag_home_icon_selector"
            android:gravity="center"
            android:text="优化"
            android:textColor="@drawable/com_text_blue_gray_selector" />

        <TextView
            android:id="@+id/tvFourthTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_frag_home_icon_selector"
            android:gravity="center"
            android:text="库"
            android:textColor="@drawable/com_text_blue_gray_selector" />

    </LinearLayout>

    <com.xyc.fastdevproject.view.views.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llTabLayout" />
</RelativeLayout>
